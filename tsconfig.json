{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "outDir": "./build",
        "strict": false,
        "moduleResolution": "node",
        "paths": {
            "*": ["*", "/*"]
        },
        "resolveJsonModule": true,
        "lib": ["es6", "dom"],
        "typeRoots": ["node_modules/@types"],
        "noEmitOnError": true,
        "noImplicitAny": true
    },
    "include": [ "src/**/*" ],
    "exclude": ["node_modules", "**/*.test.ts", "dist", "build"]
}